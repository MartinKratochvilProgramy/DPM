generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model Stocks {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  currency  String
  stocks    Stock[]

  @@map(name: "stocks")
}

model Stock {
  ticker        String    @unique
  amount        Float
  prevClose     Float
  firstPurchase DateTime
  lastPurchase  DateTime
  purchases     Purchase[]
  stocksEmail   String?
  Stocks        Stocks?   @relation(fields: [stocksEmail], references: [email])
}

model Purchase {
  id            Int       @id @default(autoincrement())
  date          DateTime
  amount        Int
  price         Float
  stockTicker   String?
  Stock         Stock?    @relation(fields: [stockTicker], references: [ticker])
}

enum Currency {
  USD
  EUR
  CZK
}
