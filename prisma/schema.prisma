generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}


model Stocks {
  email    String  @unique
  currency String
  stocks   Stock[]

  @@map("stocks")
}

model Stock {
  ticker        String     @unique
  amount        Float
  prevClose     Float
  firstPurchase DateTime
  lastPurchase  DateTime
  stocksEmail   String?
  purchases     Purchase[]
  Stocks        Stocks?    @relation(fields: [stocksEmail], references: [email])
}

model Purchase {
  id          Int      @id @default(autoincrement())
  date        DateTime
  amount      Int
  price       Float
  stockTicker String?
  Stock       Stock?   @relation(fields: [stockTicker], references: [ticker])
}

model NetWorth {
  email            String          @unique
  netWorthDates    DateTime[]
  netWorthValues   Float[]
}

model TotalInvested {
  email                   String               @unique
  totalInvestedDates      DateTime[]
  totalInvestedValues     Float[]
}

