generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email           String  @unique
  currency        String
  stocks          Stock[]
  netWorth        NetWorth[]
  relativeChange  RelativeChange[]
  totalInvested   TotalInvested[]

  @@map("user")
}

model Stock {
  ticker        String     @unique
  amount        Int
  price         Float
  firstPurchase DateTime
  lastPurchase  DateTime
  userEmail     String?   
  purchases     Purchase[]
  user          User?    @relation(fields: [userEmail], references: [email])
}

model Purchase {
  id            Int        @id @default(autoincrement())
  date          DateTime
  amount        Int
  price         Float
  stockTicker   String?   @unique
  userEmail     String?   @unique
  stock         Stock?     @relation(fields: [stockTicker], references: [ticker])
  user          User?     @relation(fields: [userEmail], references: [email])
}

model NetWorth {
  id            Int       @id @default(autoincrement())
  date          DateTime
  value         Float
  userEmail     String?   @unique
  user          User?     @relation(fields: [userEmail], references: [email])
}

model RelativeChange {
  id            Int       @id @default(autoincrement())
  date          DateTime
  value         Float
  userEmail     String?   @unique
  user          User?     @relation(fields: [userEmail], references: [email])
}

model TotalInvested {
  id            Int       @id @default(autoincrement())
  date          DateTime
  value         Float
  userEmail     String?   @unique
  user          User?     @relation(fields: [userEmail], references: [email])
}