generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stocks {
  email    String   @id @unique
  currency String
  stocks   Stock[]

  @@map("stocks")
}

model Stock {
  id            Int        @id @default(autoincrement())
  ticker        String
  amount        Float
  prevClose     Float
  firstPurchase DateTime
  lastPurchase  DateTime
  stocksEmail   String?
  purchases     Purchase[]
  Stocks        Stocks?    @relation(fields: [stocksEmail], references: [email])
}

model Purchase {
  id            Int        @id @default(autoincrement())
  date          DateTime
  amount        Int
  price         Float
  stockId       Int?
  stock         Stock?     @relation(fields: [stockId], references: [id])
}

model NetWorth {
  email          String     @unique
  netWorthDates  DateTime[]
  netWorthValues Float[]
}

model RelativeChange {
  email                String     @unique
  relativeChangeDates  DateTime[]
  relativeChangeValues Float[]
}

model TotalInvested {
  email               String     @unique
  totalInvestedDates  DateTime[]
  totalInvestedValues Float[]
}
