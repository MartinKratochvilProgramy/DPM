generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model User {
  email           String            @unique
  currency        Currency          @default(USD)
  stocks          Stocks[]
  purchases       Purchases[]
}

model Purchases {
  id            Int        @id @default(autoincrement())
  ticker        String       
  date          DateTime
  amount        Int
  currentPrice  Float
  totalAmount   Float
  user          User          @relation(fields: [userEmail], references: [email])
  userEmail     String
}

model Stocks {
  ticker      String  @unique
  amount      Int
  prevClose   Float
  user        User    @relation(fields: [userEmail], references: [email])
  userEmail   String
}

enum Currency {
  USD
  EUR
  CZK
}
