generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // uses connection pooling
}

model Stocks {
  email    String  @unique
  currency String
  stocks   Stock[]
}

model Stock {
  ticker        String     @unique
  amount        Float
  prevClose     Float
  firstPurchase DateTime
  lastPurchase  DateTime
  purchases     Purchase[]
  Stocks        Stocks?    @relation(fields: [stocksEmail], references: [email])
  stocksEmail   String
}

model Purchase {
  id          Int      @id @default(autoincrement())
  date        DateTime
  amount      Int
  price       Float
  Stock       Stock?   @relation(fields: [stockTicker], references: [ticker])
  stockTicker String?
}

enum Currency {
  USD
  EUR
  CZK
}
